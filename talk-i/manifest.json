{
  "manifest_version": 3,
  "name": "Talk-I Article Browser",
  "version": "1.0",
  "description": "文章浏览器",
  "permissions": [
    "storage",
    "alarms",
    "windows"
  ],
  "host_permissions": [
    "https://tkcrnfgnspvtzwbbvyfv.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 