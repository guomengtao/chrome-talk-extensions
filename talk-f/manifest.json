{
  "manifest_version": 3,
  "name": "Talk-F (Article Publisher)",
  "version": "1.0",
  "description": "Chrome extension for publishing articles to Supabase for Talk-E",
  "icons": {
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://tkcrnfgnspvtzwbbvyfv.supabase.co/*"
  ]
} 