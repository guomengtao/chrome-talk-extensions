{
  "manifest_version": 3,
  "name": "Talk-H Article Notifier",
  "version": "1.0",
  "description": "实时文章提醒助手",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "tts",
    "tabs",
    "windows",
    "scripting"
  ],
  "host_permissions": [
    "https://*.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["assets/complete.mp3"],
    "matches": ["<all_urls>"]
  }]
}